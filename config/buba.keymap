#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define EN_DEFAULT 0
#define RU_DEFAULT 1
#define EN_SYMB 2
#define RU_SYMB 3
#define FUNC 4
#define F_KEYS 5
#define EN_PRACTICE 6
#define RU_PRACTICE 7

// TODO:
