#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define EN_DEFAULT 0
#define RU_DEFAULT 1
#define EN_SYMB 2
#define RU_SYMB 3
#define FUNC 4

// TODO:
// 1. Home row modifiers

/ {
    macros {
        en_to_ru: en_to_ru {
        compatible = "zmk,behavior-macro";
        #binding-cells = <0>;
        bindings
            = <&to RU_DEFAULT>
            , <&kp CAPSLOCK>
            ;
        };

        ru_to_en: ru_to_en {
        compatible = "zmk,behavior-macro";
        #binding-cells = <0>;
        bindings
            = <&to EN_DEFAULT>
