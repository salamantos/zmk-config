    keymap {
        compatible = "zmk,keymap";

            // → - hold tap
            // » - double tap
            // ➤ - shifted

            // Home row modifiers →
            // +------------------------------------------------------------------+
            // |  Q  |  W  |  E  |  R  |  T  |     |  Y  |  U  |  I  |  O  |  P  |
            // | CTR | ALT | CMD | SHF |  G  |     |  H  | SHF | CMD | ALT | CTR |
            // |  Z  |  X  |  C  |  V  |  B  |     |  N  |  M  |  ,  |  .  |  /  |
            // +------------------------------------------------------------------+
            // Combos
            // +------------------------------------------------------------------+
            // |  Q     W  |  E  |  R  |  T  |     |  Y  |  U  |  I  |  O  |  P  |
            // |--- Esc ---|
            // |  A     S  |  D  |  F  |  G  |     |  H  |  J  |  K  |  L  |  ;  |
            // |--- Tab ---|                             |----- Enter -----|
            //                   |-----|___ caps word ___|-----|     |-- Х[ru] --|
            // |  Z  |  X  |  C  |  V  |  B  |     |  N  |  M  |  ,  |  .  |  /  |
            // +------------------------------------------------------------------+
        
        en_default {
            // +------------------------------------------------------------------+
            // |  Q  |  W  |  E  |  R  |  T  |     |  Y  |  U  |  I  |  O  |  P  |
            // |  A  |  S  |  D  |  F  |  G  |     |  H  |  J  |  K  |  L  |  ;  |
            // |  Z  |  X  |  C  |  V  |  B  |     |  N  |  M  |  ,  |  .  |  /  |
            //
            //       | LANG | SPC→symb | CMD |     | ENT→func | SPC→symb | BSPC |
            // +------------------------------------------------------------------+
            bindings = <
                &kp Q         &kp W        &kp E        &kp R         &kp T               &kp Y  &kp U         &kp I        &kp O        &kp P   
                &hml LCTRL A  &hml LALT S  &hml LGUI D  &hml LSHFT F  &kp G               &kp H  &hrm LSHFT J  &hrm LGUI K  &hrm LALT L  &hrm LCTRL SEMI
                &kp Z         &kp X        &kp C        &kp V         &kp B               &kp N  &kp M         &kp COMMA    &kp DOT      &kp FSLH
                
                &en_to_ru   &lt EN_SYMB SPACE   &kp LGUI           &lt FUNC ENTER   &lt EN_SYMB SPACE   &kp BSPC
            >;
        };

        ru_default {
            // +-----------------------------------------------------------------+
            // |  Й  |  Ц  |  У  |  К  | Е→Ё |     |  Н  |  Г  |  Ш  |  Щ  |  З  |
            // |  Ф  |  Ы  |  В  |  А  |  П  |     |  Р  |  О  |  Л  |  Д  |  Ж  |
            // |  Я  |  Ч  |  С  |  М  |  И  |     |  Т  | Ь»Ъ |  Б  |  Ю  |  Э  |
            //
            //       | LANG | SPC→symb | CMD |     | ENT→func | SPC→symb | BSPC |
            // +-----------------------------------------------------------------+
            bindings = <
                &kp Q         &kp W        &kp E        &kp R         &ht_let BSLH T       &kp Y  &kp U            &kp I        &kp O        &kp P
                &hrm LCTRL A  &hrm LALT S  &hrm LGUI D  &f_shft_caps  &kp G                &kp H  &hrm LSHFT J     &hrm LGUI K  &hrm LALT L  &hrm LCTRL SEMI
                &kp Z         &kp X        &kp C        &kp V         &kp B                &kp N  &soft_hard_sign  &kp COMMA    &kp DOT      &kp SINGLE_QUOTE
                
                &ru_to_en   &lt RU_SYMB SPACE   &kp LGUI            &lt FUNC ENTER   &lt RU_SYMB SPACE   &kp BSPC
            >;
        };

        en_symb {
            // +-----------------------------------------------------------------+
            // | <»> | 7➤& | 8➤* | 9➤( | 0➤) |     |  (  |  )  |  ;  |  {  |  }  |
            // | SHF | 4➤$ | 5➤% | 6➤^ | -➤_ |     | ?»! |  ,  |  :  |  [  |  ]  |
            // | `➤~ | 1➤! | 2➤@ | 3➤# | =➤+ |     |  @  |  .  | '➤" |  /  | \➤| |
            //
            //     | LANG | SPC | ↓↓↓ |     | ENT | SPC | BSPC |
            // +-----------------------------------------------------------------+
            bindings = <
                &en_lt_gt         &kp N7   &kp N8   &kp N9   &kp N0            &kp LPAR        &kp RPAR    &kp SEMI     &kp LBRC         &kp RBRC   
                &kp LSHFT         &kp N4   &kp N5   &hml LSHFT N6   &kp MINUS         &en_ques_excl   &hrm LSHFT COMMA   &kp COLON    &kp LBKT         &kp RBKT
                &kp GRAVE         &kp N1   &kp N2   &kp N3   &kp EQUAL         &kp AT          &kp DOT     &kp APOS     &kp SLASH        &kp BACKSLASH
                
                &trans   &kp LSHFT   &trans       &none   &kp LSHFT   &trans
            >;
        };

        ru_symb {
            // SAME LAYOUT AS en_symb, BUT ADOPTED FOR RU OS LAYOUT
            // TODO: implement at
            bindings = <
                &none             &ru_7_shifted   &ru_8_shifted   &n9_shifted     &n0_shifted             &none           &none        &none        &none            &none
                &ru_lt_gt         &ru_4_shifted   &ru_5_shifted   &ru_6_shifted   &minus_underscore       &ru_ques_excl   &kp LS(N6)   &ru_colons   &ru_left_brac    &ru_right_brac
                &ru_grave_tilde   &n1_shifted     &ru_2_shifted   &ru_3_shifted   &equal_plus             &kp AT          &kp LS(N7)   &ru_quotes   &ru_slash_ques   &ru_backslash_pipe
                
                &trans   &kp SPACE   &trans       &kp ENTER   &kp SPACE   &kp BSPC
            >;
        };

        func {
            // +------------------------------------------------------------------------+
            // |     |     |    | MUTE |     |       |     | HOME|  ↑  | END |   LOCK   |
            // |     |     | PP | VOL↑ | BR↑ |       |     |  ←  |  ↓  |  →  |SCREENSHOT|
            // |     |     |    | VOL↓ | BR↓ |       |     | ←←  |     |  →→ | SOFT OFF |
            //
            //            |     |     |F_KEYS|       |     |     |     |
            // +------------------------------------------------------------------------+
            bindings = <
                &none   &none   &none             &kp C_MUTE     &none               &none   &kp HOME     &kp UP    &kp END         &kp LG(LC(Q))   
                &none   &none   &kp C_PLAY_PAUSE  &kp C_VOL_UP   &kp C_BRI_UP        &none   &kp LEFT     &kp DOWN  &kp RIGHT       &kp LG(LS(X))
                &none   &none   &none             &kp C_VOL_DN   &kp C_BRI_DN        &none   &kp LA(LEFT) &none     &kp LA(RIGHT)   &soft_off
                
                                                   &none   &none   &mo F_KEYS        &none   &none   &none
            >;
        };

        f_keys {
            bindings = <
                &none &none &none &none &none        &to RU_PRACTICE  &kp F9   &kp F10  &kp F11  &kp F12
                &none &none &none &none &none        &to EN_PRACTICE  &kp F5   &kp F6   &kp F7   &kp F8
                &none &none &none &none &none        &none            &kp F1   &kp F2   &kp F3   &kp F4
                
                            &none &none &none        &none &none &none
            >;
        };

        en_practice {
            // Same as en_default but without home row mods
            bindings = <
                &kp Q         &kp W        &kp E        &kp R         &kp T               &kp Y  &kp U         &kp I        &kp O        &kp P   
                &kp A         &kp S        &kp D        &kp F         &kp G               &kp H  &kp J         &kp K        &kp L        &hrm LCTRL SEMI
                &hrm LCTRL Z  &kp X        &kp C        &kp V         &kp B               &kp N  &kp M         &kp COMMA    &kp DOT      &kp FSLH
                
                &en_to_ru   &lt EN_SYMB SPACE   &kp LGUI           &lt FUNC ENTER   &lt EN_SYMB SPACE   &kp BSPC
            >;
        };

        ru_practice {
            // Same as ru_default but without home row mods
            bindings = <
                &kp Q         &kp W        &kp E        &kp R         &ht_let BSLH T       &kp Y  &kp U            &kp I        &kp O        &ze_ha
                &kp A         &kp S        &kp D        &kp F         &kp G                &kp H  &kp J            &kp K        &kp L        &hrm LCTRL SEMI
                &hrm LCTRL Z  &kp X        &kp C        &kp V         &kp B                &kp N  &soft_hard_sign  &kp COMMA    &kp DOT      &kp SINGLE_QUOTE
                
                &ru_to_en   &lt RU_SYMB SPACE   &kp LGUI            &lt FUNC ENTER   &lt RU_SYMB SPACE   &kp BSPC
            >;
        };
    };
};
